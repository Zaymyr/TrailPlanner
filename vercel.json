{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "outputDirectory": ".next",
  "redirects": [
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "trailplanner.app"
        }
      ],
      "destination": "https://pace-yourself.com/:path*",
      "permanent": true
    },
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "trail-planner.vercel.app"
        }
      ],
      "destination": "https://pace-yourself.com/:path*",
      "permanent": true
    }
  ]
}
