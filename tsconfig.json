{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "incremental": true,
    "jsx": "preserve",
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "app/**/*",
    "components/**/*",
    "packages/**/*",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "vitest.config.ts"
  ],
  "exclude": ["node_modules"]
  "include": ["packages/**/*", "app/**/*", "components/**/*", "vitest.config.ts", "next-env.d.ts"]
}
